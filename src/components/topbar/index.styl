.components-topbar {
  display: flex;
  width: 100%;
  height: $topbar-height;
  border-bottom: 1px solid #e1e1e1;
  line-height: $topbar-height - 1px;
  text-align: center;
  background: #ffffff;
  color: $color;
  font-size: 36px;

  &__fixed {
    position: fixed;
    left: 0px;
    top: 0px;
    z-index: $z-index-topbar;  
  }

  .topbar {
    &__body {
      flex: 1; 
      text-align: center; 
    }

    &__header, &__footer {
      display: block;
      width: 88px;
      height: 88px;  
      a {
        position: relative;
        display: block;
        width: 100%;
        height: 100%;
        color: #333;
        i {
          position: absolute;
          left: 50%;
          top: 50%;
          transform: translate(-50%, -50%)
        }
      }  
    }
  }
}